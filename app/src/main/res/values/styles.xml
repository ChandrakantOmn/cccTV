<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CCCTheme.Leanback" parent="@style/Theme.Leanback">
        <item name="android:colorPrimary">@color/teal_600</item>
        <item name="android:colorAccent">@color/teal_accent_400</item>
        <item name="defaultSearchColor">@color/amber_800</item>
        <item name="detailsDescriptionSubtitleStyle">@style/CCCDescriptionSubtitleStyle</item>
    </style>

    <style name="CCCDescriptionSubtitleStyle" parent="Widget.Leanback.DetailsDescriptionSubtitleStyle">
        <item name="android:maxLines">20</item>
    </style>

    <style name="TitleOnlyStyle" parent="Widget.Leanback.ImageCardViewStyle">
        <item name="lbImageCardViewType">Title|Content</item>
    </style>

    <style name="EventCardImageStyle" parent="Widget.Leanback.ImageCardView.ImageStyle">
        <item name="android:layout_width">@dimen/event_card_width</item>
        <item name="android:layout_height">@dimen/event_card_height</item>
    </style>

    <style name="MultiLineTitleStyle" parent="Widget.Leanback.ImageCardView.TitleStyle">
        <item name="android:minLines">2</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="MultiLineContentStyle" parent="Widget.Leanback.ImageCardView.ContentStyle">
        <item name="android:minLines">3</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="GridCardStyle" parent="Widget.Leanback.ImageCardViewStyle">
        <item name="cardBackground">@null</item>
    </style>

    <style name="GridCardImageStyle" parent="Widget.Leanback.ImageCardView.ImageStyle">
        <item name="android:layout_width">@dimen/grid_card_width</item>
        <item name="android:layout_height">@dimen/grid_card_height</item>
    </style>

    <style name="GridCardTheme" parent="Theme.Leanback">
        <item name="imageCardViewStyle">@style/GridCardStyle</item>
        <item name="imageCardViewImageStyle">@style/GridCardImageStyle</item>
    </style>

    <style name="EventCardStyle" parent="Theme.Leanback">
        <item name="imageCardViewStyle">@style/TitleOnlyStyle</item>
        <item name="imageCardViewImageStyle">@style/EventCardImageStyle</item>
        <item name="imageCardViewTitleStyle">@style/MultiLineTitleStyle</item>
        <item name="imageCardViewContentStyle">@style/MultiLineContentStyle</item>
    </style>

    <style name="SpeakerCardStyle" parent="Widget.Leanback.BaseCardViewStyle">
        <item name="cardBackground">@null</item>
        <item name="cardForeground">@null</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lb="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    lb:cardBackground="@null"
    lb:layout_viewType="main"
    >

    <ImageView
        android:id="@+id/speaker_image"
        android:layout_width="@dimen/speaker_image_card_width"
        android:layout_height="@dimen/speaker_image_card_height"
        android:src="@drawable/voctocat"
        android:tint="@color/unfocused_speaker"
        />

    <TextView
        android:id="@+id/speaker_name"
        style="@style/Widget.Leanback.ImageCardView.BadgeStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:textColor="@color/unfocused_speaker"
        tools:text="Stefan Medack"
        />

</LinearLayout>